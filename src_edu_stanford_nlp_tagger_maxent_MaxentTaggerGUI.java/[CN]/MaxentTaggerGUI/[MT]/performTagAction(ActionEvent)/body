{
  final String s=inputBox.getText();
  Thread t=new Thread(){
    @Override public void run(){
      final String taggedStr=tagger.tagString(s);
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          outputBox.setText(taggedStr);
        }
      }
);
    }
  }
;
  t.start();
}

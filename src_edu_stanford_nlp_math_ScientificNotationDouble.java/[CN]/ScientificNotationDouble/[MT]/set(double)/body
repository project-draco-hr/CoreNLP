{
  reset();
  if (d != 0) {
    String s=Double.toString(d);
    if (s.indexOf('E') != -1) {
      StringTokenizer st=new StringTokenizer(s,"E");
      base=Double.parseDouble(st.nextToken());
      exponent=Integer.parseInt(st.nextToken());
    }
 else {
      base=d;
      ensureProperBase();
    }
  }
}

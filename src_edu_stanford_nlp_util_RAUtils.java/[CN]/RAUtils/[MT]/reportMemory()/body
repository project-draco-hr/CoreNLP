{
  Runtime runtime=Runtime.getRuntime();
  long mb=1024 * 1024;
  long total=runtime.totalMemory();
  long free=runtime.freeMemory();
  long used=(total - free);
  if (RA.isActive()) {
    msgf("memory",String.format("%d MB",used / mb));
  }
 else {
    msgf("memory","......................... memory in use: %d MB .........................%n",used / mb);
  }
}

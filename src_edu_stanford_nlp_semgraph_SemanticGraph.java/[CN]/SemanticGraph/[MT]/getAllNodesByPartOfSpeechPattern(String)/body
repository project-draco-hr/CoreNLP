{
  Pattern p=Pattern.compile(pattern);
  List<IndexedWord> nodes=new ArrayList<IndexedWord>();
  for (  IndexedWord vertex : vertexSet()) {
    String pos=vertex.tag();
    if ((pos == null && pattern == null) || pos != null && p.matcher(pos).matches()) {
      nodes.add(vertex);
    }
  }
  return nodes;
}

{
  if (file == null) {
    return;
  }
  FileWriter out=null;
  try {
    out=new FileWriter(file);
    out.write(tp.getText());
  }
 catch (  IOException e) {
    errorMessage("There was a problem saving the file");
  }
 finally {
    if (out != null) {
      try {
        out.close();
      }
 catch (      IOException ioe) {
      }
    }
  }
  cache=tp.getText();
  curFile=file;
}

{
  if (t.isLeaf()) {
    return null;
  }
  Tree[] kids=t.children();
  String motherCat=tlp.basicCategory(t.label().value());
  if (kids.length == 1) {
    return kids[0];
  }
 else {
    if (DEBUG) {
      System.err.println("looking for head of " + t.label() + " ["+ motherCat+ ']');
    }
    Tree theHead=traverseLocate(kids,motherCat,true);
    return theHead;
  }
}

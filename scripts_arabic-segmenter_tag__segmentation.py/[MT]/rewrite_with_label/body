def rewrite_with_label(char, label):
    if (label == 'BEGIN'):
        return (SEG_MARKER + char)
    elif (label == 'CONT'):
        return char
    elif (label == 'REW'):
        if (char == u'\u0644'):
            return u':\u0627\u0644'
        else:
            return char
    else:
        assert False, ('unrecognized label: ' + label)

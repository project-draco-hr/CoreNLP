{
  if (str.indexOf('@') == -1) {
    if (str.indexOf('^') == -1) {
      return str;
    }
    return str.substring(0,str.indexOf('^'));
  }
  StringBuilder sb=new StringBuilder();
  sb.append(str.substring(0,str.indexOf(' ')));
  int num=-2;
  for (int i=0; i < str.length(); i++) {
    if (str.charAt(i) == ' ') {
      num++;
    }
  }
  sb.append(" w ").append(num);
  return sb.toString();
}

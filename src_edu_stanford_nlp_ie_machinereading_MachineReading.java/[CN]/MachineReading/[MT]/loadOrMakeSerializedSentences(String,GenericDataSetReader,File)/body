{
  Annotation corpusSentences;
  if (serializeCorpora && serializedSentences.exists() && !forceParseSentences) {
    logger.info("Loaded serialized sentences from " + serializedSentences.getAbsolutePath() + "...");
    corpusSentences=(Annotation)IOUtils.readObjectFromFile(serializedSentences);
    logger.info("Done. Loaded " + corpusSentences.get(CoreAnnotations.SentencesAnnotation.class).size() + " sentences.");
  }
 else {
    logger.info("Parsing corpus sentences...");
    if (serializeCorpora)     logger.info("These sentences will be serialized to " + serializedSentences.getAbsolutePath());
    corpusSentences=reader.parse(sentencesPath);
    logger.info("Done. Parsed " + AnnotationUtils.sentenceCount(corpusSentences) + " sentences.");
    if (serializeCorpora) {
      logger.info("Serializing parsed sentences to " + serializedSentences.getAbsolutePath() + "...");
      IOUtils.writeObjectToFile(corpusSentences,serializedSentences);
      logger.info("Done. Serialized " + AnnotationUtils.sentenceCount(corpusSentences) + " sentences.");
    }
  }
  return corpusSentences;
}

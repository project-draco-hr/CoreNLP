{
  if (!disposed) {
    try {
      EventQueue.invokeLater(new Runnable(){
        public void run(){
          if (!disposed) {
            progressBar.setValue(v);
            if (v >= max) {
              dispose();
              disposed=true;
            }
          }
        }
      }
);
    }
 catch (    Exception ie) {
      ie.printStackTrace();
    }
  }
}

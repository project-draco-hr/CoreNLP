{
  int tries=0;
  while (!candidate.exists()) {
    if (tries > 30) {
      throw new IOException("Could not create file: " + candidate);
    }
    if (candidate.createNewFile()) {
      break;
    }
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
      log(e);
    }
  }
}

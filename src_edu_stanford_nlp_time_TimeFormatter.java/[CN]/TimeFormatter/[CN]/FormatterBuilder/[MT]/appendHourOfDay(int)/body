{
  if (useRelaxedHour) {
    builder.appendHourOfDay(digits);
    appendNumericFields(new DateTimeFieldType[]{DateTimeFieldType.hourOfDay(),DateTimeFieldType.clockhourOfDay()},digits);
  }
 else {
    builder.appendHourOfDay(digits);
    appendNumericField(DateTimeFieldType.hourOfDay(),digits);
  }
}

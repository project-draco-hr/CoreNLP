{
  if (t == null || t.isPreTerminal())   return t;
  if (t.numChildren() == 1) {
    final Tree fc=t.firstChild();
    if (fc.isPhrasal()) {
      t.setValue(t.value() + "/" + fc.value());
      t.setChildren(fc.children());
      collapseUnaries(t);
    }
  }
  for (  Tree kid : t.getChildrenAsList())   collapseUnaries(kid);
  return t;
}

{
  StringBuilder os=new StringBuilder();
  for (int i=0, sz=tokens.size(); i < sz; i++) {
    CoreLabel crt=tokens.get(i);
    if (i > 0) {
      CoreLabel prev=tokens.get(i - 1);
      int spaces=1;
      if (crt.containsKey(CharacterOffsetBeginAnnotation.class)) {
        spaces=crt.get(CharacterOffsetBeginAnnotation.class) - prev.get(CharacterOffsetEndAnnotation.class);
      }
      while (spaces > 0) {
        os.append(' ');
        spaces--;
      }
    }
    String word=(String)crt.get(textAnnotation);
    if (word == null) {
      return null;
    }
    os.append(word);
  }
  return os.toString();
}

{
  final String charset="utf-8";
  BufferedReader reader;
  try {
    reader=new BufferedReader(new InputStreamReader(PTBTokenizerITest.class.getResourceAsStream(filename),charset));
  }
 catch (  NullPointerException npe) {
    Map<String,String> env=System.getenv();
    String loc=env.get("JAVANLP_HOME");
    reader=new BufferedReader(new InputStreamReader(new FileInputStream(loc + File.separator + "projects/core/data/edu/stanford/nlp/process"+ File.separator+ filename),charset));
  }
  return reader;
}

{
  try {
    oos.writeObject(classifier);
    oos.writeObject(flags);
    oos.writeObject(featureFactories);
    oos.writeObject(classIndex);
    oos.writeObject(answerArrays);
    oos.writeObject(knownLCWords);
    oos.close();
    log.info("Done.");
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}

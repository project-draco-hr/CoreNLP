{
  String s=node.word();
  if (showIndices) {
    s=node.sentIndex() + ":" + node.index()+ "-"+ s;
  }
  if (showTags) {
    String tag=node.tag();
    if (tag != null && tag.length() > 0) {
      s+="/" + tag;
    }
  }
  if (showAnnos) {
    s+=node.toString(CoreLabel.MAP_FORMAT);
  }
  return s;
}

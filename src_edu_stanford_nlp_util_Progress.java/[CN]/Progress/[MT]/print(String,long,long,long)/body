{
  if (total < 2)   return;
  if (!backSpace) {
    if (n == 0)     System.err.print(header + ": ");
 else     if (n == total - 1)     System.err.printf("done\n");
  }
 else   if (n == 0)   System.err.print(header + ":  0%");
 else   if (n == total - 1)   System.err.printf("\b\b\bdone\n");
 else   if (n >= total)   System.err.printf("\b\b\b\b????\n");
 else   if (n % inc == 0)   System.err.printf("\b\b\b%2d%%",100 * n / total);
}

{
  StringWriter buf=new StringWriter();
  buf.write(LABEL);
  buf.write("\t");
  buf.write(Ssurgeon.RELN_ARG);
  buf.write(" ");
  buf.write(relation.toString());
  buf.write("\t");
  buf.write(Ssurgeon.GOV_NODENAME_ARG);
  buf.write(" ");
  buf.write(govName);
  buf.write("\t");
  buf.write(Ssurgeon.DEP_NODENAME_ARG);
  buf.write(" ");
  buf.write(depName);
  return buf.toString();
}

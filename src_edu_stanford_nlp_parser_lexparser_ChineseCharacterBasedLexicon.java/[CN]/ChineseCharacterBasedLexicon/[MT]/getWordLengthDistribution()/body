{
  int samples=0;
  ClassicCounter<Integer> c=new ClassicCounter<Integer>();
  while (samples++ < 10000) {
    String s=sampleFrom();
    c.incrementCount(Integer.valueOf(s.length()));
    if (samples % 1000 == 0) {
      System.out.print(".");
    }
  }
  System.out.println();
  Distribution<Integer> genWordLengthDist=Distribution.getDistribution(c);
  return genWordLengthDist;
}

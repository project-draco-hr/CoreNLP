{
  List<Tree> leaves=tree.getLeaves();
  if (leaves.size() != words.size())   throw new CorefMentionFinderException("Number of tree leaves not equal with number of words for tree " + tree);
  leavesToPositions=new HashMap<Tree,Integer>();
  for (int pos=0; pos < leaves.size(); pos++) {
    Tree leaf=leaves.get(pos);
    leavesToPositions.put(leaf,pos);
  }
}

{
  this.words=words;
  this.top=tree;
  if (tree == null || words == null)   throw new CorefMentionFinderException("CorefMentionFinder cannot be created with null parameters!");
  mapLeavesToPositions(tree,words);
  this.headFinder=new ModCollinsHeadFinder();
  this.seenHeads=new HashSet<Integer>();
}

{
  if (!isClauseClassifier.isPresent() || !(isClauseClassifier.get() instanceof LinearClassifier)) {
    throw new IllegalArgumentException("For now, only linear classifiers are supported");
  }
  search(candidateFragments,((LinearClassifier<Boolean,String>)isClauseClassifier.get()).weightsAsMapOfCounters().get(true),this.featurizer.get(),10000);
}

{
  ServerSocket initListener=null;
  int tries=0;
  while (true) {
    tries+=1;
    try {
      initListener=new ServerSocket(port);
      break;
    }
 catch (    BindException e) {
      throw new ServiceException(e);
    }
catch (    IOException e) {
      throw new ServiceException(e);
    }
  }
  this.listener=initListener;
  this.service=(Function)service;
  this.executor=executor;
}

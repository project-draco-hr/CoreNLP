{
  System.err.println("WordNet.load: " + path);
  for (Iterator<WeakReference<WordNet>> it=instances.iterator(); it.hasNext(); ) {
    WordNet wordnet=it.next().get();
    if (wordnet == null) {
      it.remove();
    }
 else     if (wordnet.path.equals(path)) {
      return wordnet;
    }
  }
  try {
    WordNet wordnet=loadPrologWordNet(path);
    instances.add(new WeakReference<WordNet>(wordnet));
    return wordnet;
  }
 catch (  RuntimeIOException e) {
    throw new IllegalArgumentException("Provided path not a valid WordNet PrologDB directory",e);
  }
}

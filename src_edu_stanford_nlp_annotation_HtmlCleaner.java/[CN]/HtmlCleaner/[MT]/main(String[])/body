{
  if (args.length < 1) {
    System.err.println("usage: java edu.stanford.nlp.annotation.HtmlCleaner filenameToBeCleaned");
    System.exit(0);
  }
  InputStream r=null;
  try {
    r=new BufferedInputStream(new FileInputStream(args[0]));
    HtmlCleaner c=new HtmlCleaner(r,System.out);
    c.clean();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
 finally {
    if (r != null) {
      try {
        r.close();
      }
 catch (      Exception e) {
      }
    }
  }
}

{
  Set<Class<? extends CoreAnnotation>> requirements=new HashSet<>(Arrays.asList(CoreAnnotations.TokensAnnotation.class,CoreAnnotations.SentencesAnnotation.class,CoreAnnotations.PartOfSpeechAnnotation.class,NaturalLogicAnnotations.PolarityAnnotation.class,SemanticGraphCoreAnnotations.BasicDependenciesAnnotation.class,SemanticGraphCoreAnnotations.CollapsedDependenciesAnnotation.class,SemanticGraphCoreAnnotations.CollapsedCCProcessedDependenciesAnnotation.class));

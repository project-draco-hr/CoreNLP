{
  BufferedReader reader=new BufferedReader(new InputStreamReader(System.in));
  String line;
  System.out.print(prompt);
  while ((line=reader.readLine()) != null) {
switch (line.toLowerCase()) {
case "exit":
case "quit":
case "q":
      return;
default :
    callback.accept(line);
}
System.out.print(prompt);
}
}

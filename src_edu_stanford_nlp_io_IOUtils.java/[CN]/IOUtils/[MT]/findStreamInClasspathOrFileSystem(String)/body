{
  InputStream is=IOUtils.class.getClassLoader().getResourceAsStream(name);
  if (is == null) {
    is=IOUtils.class.getClassLoader().getResourceAsStream(name.replaceAll("\\\\","/"));
  }
  if (is == null) {
    is=new FileInputStream(name);
  }
  if (name.endsWith(".gz")) {
    try {
      is=new GZIPInputStream(is);
    }
 catch (    IOException e) {
    }
  }
  return is;
}

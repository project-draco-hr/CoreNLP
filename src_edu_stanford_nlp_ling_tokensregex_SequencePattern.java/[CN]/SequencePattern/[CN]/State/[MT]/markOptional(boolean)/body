{
  this.isOptional=true;
  if (propagate && next != null) {
    Stack<State> todo=new Stack<State>();
    Set<State> seen=new HashSet<State>();
    todo.addAll(next);
    while (!todo.empty()) {
      State s=todo.pop();
      s.isOptional=true;
      seen.add(s);
      if (next != null) {
        for (        State n : next) {
          if (!seen.contains(n)) {
            todo.push(n);
          }
        }
      }
    }
  }
}

{
  if (era >= 0)   base=JodaTimeUtils.setField(base,DateTimeFieldType.era(),era);
  if (year >= 0)   base=JodaTimeUtils.setField(base,DateTimeFieldType.year(),year);
  if (month >= 0)   base=JodaTimeUtils.setField(base,DateTimeFieldType.monthOfYear(),month);
  if (day >= 0)   base=JodaTimeUtils.setField(base,DateTimeFieldType.dayOfMonth(),day);
}

{
  List<File> allFiles=new ArrayList<File>();
  for (  String tokfile : file.split("[,;]")) {
    File filef=new File(tokfile);
    String ext=".*";
    File dir=null;
    if (filef.isDirectory()) {
      dir=filef;
    }
 else {
      dir=filef.getParentFile();
      ext=filef.getName();
    }
    for (    File f : IOUtils.iterFilesRecursive(dir,Pattern.compile(ext))) {
      allFiles.add(f);
    }
  }
  return allFiles;
}

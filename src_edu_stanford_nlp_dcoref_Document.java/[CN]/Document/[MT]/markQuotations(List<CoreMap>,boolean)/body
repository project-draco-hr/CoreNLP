{
  boolean insideQuotation=false;
  for (  CoreMap m : results) {
    for (    CoreLabel l : m.get(TokensAnnotation.class)) {
      String w=l.get(TextAnnotation.class);
      boolean noSpeakerInfo=!l.containsKey(SpeakerAnnotation.class) || l.get(SpeakerAnnotation.class).equals("") || l.get(SpeakerAnnotation.class).startsWith("PER");
      if (w.equals("``") || (!insideQuotation && normalQuotationType && w.equals("\""))) {
        insideQuotation=true;
        maxUtter++;
        continue;
      }
 else       if (w.equals("''") || (insideQuotation && normalQuotationType && w.equals("\""))) {
        insideQuotation=false;
      }
      if (insideQuotation) {
        l.set(UtteranceAnnotation.class,maxUtter);
      }
      if (noSpeakerInfo) {
        l.set(SpeakerAnnotation.class,"PER" + l.get(UtteranceAnnotation.class));
      }
    }
  }
  if (maxUtter == 0 && !normalQuotationType)   markQuotations(results,true);
}

{
  if (features.length != values.length) {
    throw new RuntimeException("Array size mis-match: " + features.length + " "+ values.length);
  }
  Features f=new Features(){
    float[] values;
    @Override public float value(    int featureIndex){
      return values[featureIndex];
    }
    @Override public boolean isBoolean(){
      return false;
    }
    @Override public void setValues(    float[] v){
      values=v;
    }
  }
;
  f.features=features;
  f.setValues(values);
  return f;
}

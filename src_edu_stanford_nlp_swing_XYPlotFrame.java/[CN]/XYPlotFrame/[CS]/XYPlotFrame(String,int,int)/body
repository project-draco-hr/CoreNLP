{
  super(str);
  xMax=x;
  yMax=y;
  grid=new Color[x][y];
  JPanel jp=new MyJPanel();
  getContentPane().add(jp,BorderLayout.CENTER);
  setBounds(20,20,xMax + 35,yMax + 35);
  addWindowListener(new WindowAdapter(){
    @Override public void windowClosing(    WindowEvent e){
      System.exit(0);
    }
  }
);
  setVisible(true);
}

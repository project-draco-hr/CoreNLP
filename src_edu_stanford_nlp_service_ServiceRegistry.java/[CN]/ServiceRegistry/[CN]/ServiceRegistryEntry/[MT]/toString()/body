{
  StringBuilder sb=new StringBuilder().append(host.getHostName()).append(":").append(port).append(" ").append(service).append("(");
  for (int i=0; i < args.length; i++) {
    sb.append(args[i]);
    if (i < args.length - 1) {
      sb.append(",");
    }
  }
  sb.append(")");
  return sb.toString();
}

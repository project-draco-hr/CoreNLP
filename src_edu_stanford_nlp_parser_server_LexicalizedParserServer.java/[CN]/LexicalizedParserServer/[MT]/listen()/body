{
  while (stillRunning) {
    Socket clientSocket=null;
    try {
      clientSocket=serverSocket.accept();
      System.err.println("Got a connection");
      processRequest(clientSocket);
      System.err.println("Goodbye!");
      System.err.println();
    }
 catch (    IOException e) {
      clientSocket.close();
      System.err.println(e);
      continue;
    }
  }
  serverSocket.close();
}

{
  String str=" (?$term ";
  if (!prevContext.isEmpty()) {
    str+=prevContext + " ";
  }
  str+="[";
  if (useTag) {
    str+="{tag:/" + tag + ".*/}";
  }
  str+="]{1," + numWordsCompound + "}";
  if (!nextContext.isEmpty())   str+=" " + nextContext;
  str+=")";
  str=StringUtils.toAscii(str);
  return str;
}

{
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < ln - 1; i++) {
    sb.append((char)0);
  }
  for (int start=cn - 1, end=line.indexOf(' ',start); start < line.length(); start=end + 1, end=line.indexOf(' ',start)) {
    if (end == -1) {
      end=line.length() - 1;
    }
    sb.append((char)(end - start));
  }
  sb.append((char)0);
  return (sb.toString());
}

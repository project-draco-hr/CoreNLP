{
  int numHigh=0;
  int numLow=0;
  int numIn=0;
  int numOut=0;
  for (int i=0; i < SAMPLE_SIZE; i++) {
    double sample=Gaussian.drawSample(random,mean,var);
    if (sample > mean) {
      numHigh++;
    }
 else {
      numLow++;
    }
    if (Math.abs(sample - mean) < Math.sqrt(var)) {
      numIn++;
    }
 else {
      numOut++;
    }
  }
  assertTrue(Math.abs(numHigh - numLow) < SAMPLE_SIZE * 0.1);
  assertTrue(Math.abs(numIn - (numOut * 2)) < SAMPLE_SIZE * 0.2);
}

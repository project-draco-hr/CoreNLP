{
  String v=Integer.toString(value);
  int s=getCellSize();
  Font f=new Font("Dialog",Font.PLAIN,s / 6);
  g2.setFont(f);
  g2.setColor(labelColor);
  FontMetrics fm=g2.getFontMetrics();
  int sw=fm.stringWidth(v);
  int sh=fm.getAscent() - fm.getDescent();
  float r=(float)getScaledRadius();
  if (r > (3 + sw / 2) && r > (3 + sh / 2)) {
    g2.drawString(v,(s - sw) / 2,(s + sh) / 2);
  }
 else {
    g2.drawString(v,s / 2 + r,s / 2 + r + fm.getAscent());
  }
}

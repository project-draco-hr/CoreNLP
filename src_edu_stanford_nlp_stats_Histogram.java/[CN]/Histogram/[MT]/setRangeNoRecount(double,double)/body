{
  if (Double.isNaN(min))   throw new IllegalArgumentException("min is NaN");
  if (Double.isInfinite(min))   throw new IllegalArgumentException("min is infinite");
  if (Double.isNaN(max))   throw new IllegalArgumentException("max is NaN");
  if (Double.isInfinite(max))   throw new IllegalArgumentException("max is infinite");
  if (max <= min)   throw new IllegalArgumentException("max <= min");
  this.min=min;
  this.max=max;
}
